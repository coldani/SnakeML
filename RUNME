#!/bin/sh

# parse command line arguments
while getopts s:e:m: flag
do
    case "${flag}" in
        s) pop_size=${OPTARG};;
        e) num_epochs=${OPTARG};;
        m) num_matches=${OPTARG};;
    esac
done

# activate environment and install requirements
. venv/bin/activate > output/output.log 2> output/error.log
pip install -r requirements.txt > output/output.log 2> output/error.log

# train
python3 train.py -s $pop_size -e $num_epochs -m $num_matches > output/output.log 2> output/error.log